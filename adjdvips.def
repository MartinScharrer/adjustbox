% \begin{macro}{\@clipbox}
%    \begin{macrocode}
\def\@clipbox#1#2#3#4#5{%
    \@trimbox{#1}{#2}{#3}{#4}{#5}%
    \setbox#5=\hbox{%
        \edef\HEIGHT{-\strip@pt\ht#5\space}%
        \edef\DEPTH{\strip@pt\dp#5\space}%
        \edef\WIDTH{\strip@pt\wd#5\space}%
        \special{%
            ps:
              /mtrxc matrix currentmatrix def 
              currentpoint gsave
              translate
              Resolution 72 div VResolution 72 div
              scale
              newpath
              0 0 moveto
              0 \HEIGHT lineto
              \WIDTH \HEIGHT lineto
              \WIDTH \DEPTH  lineto
              0      \DEPTH  lineto
              closepath
              clip
             % 0 \DEPTH \WIDTH \HEIGHT
             % rectclip
              newpath
              mtrxc setmatrix 
        }%
        \box#5%
        \special{ps: grestore }%
    }%
}
