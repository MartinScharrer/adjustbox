        \expandafter\@@splitbox
    \else
        \ifdim\adjbox@tlly<\splitbox@epsilon
            \splitboxlastnewline
        \else
            \splitboxnewline
            \adjbox@tllx\z@
            \adjbox@turx\width
            \advance\adjbox@tlly-\Gin@nat@height
            \advance\adjbox@tury+\Gin@nat@height
            \expandafter\expandafter
            \expandafter\@@splitbox
