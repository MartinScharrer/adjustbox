\define@key{adjbox}{trim}{%
    \def\adjustbox@content{%
        \adjbox@parse@v{#1}%
        \adjustbox@@@trimclip
    }%
}
%    \end{macrocode}
% \end{key}
%
%
% \begin{macro}{\adjustbox@@@trimclip}
%    \begin{macrocode}
\def\adjustbox@@@trimclip{%
    \ifGin@clip
        \expandafter\@clipbox
    \else
        \expandafter\@trimbox
    \fi
        \adjbox@tllx
        \adjbox@tlly
        \adjbox@turx
        \adjbox@tury
        \collectedbox
    \usebox\collectedbox
}
%    \end{macrocode}
% \end{macro}
